<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.smartcityguide.SuperMarkets" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        android:src="@drawable/supermarkets" />

    <Button
        android:id="@+id/btnArguroupolis7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView1"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="88dp"
        android:text="Arguroupolis" />

    <Button
        android:id="@+id/btnHelliniko7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnArguroupolis7"
        android:layout_alignRight="@+id/imageView1"
        android:layout_below="@+id/btnArguroupolis7"
        android:layout_marginTop="51dp"
        android:text="Helliniko" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="58dp"
        android:text="Choose the City to Continue:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>
